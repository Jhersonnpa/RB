---
import { Image } from "astro:assets";
import X from "@/components/icons/x.astro";
---

<div
  class="md:hidden w-full h-screen fixed left-0 -top-[100vh] bg-background container mx-auto p-4 z-10"
  id="navbar-mobile"
>
  <div class="flex justify-between items-center p-4">
    <a href="/" rel="noopener noreferrer"
      ><Image
        src="/Logo_RB_5.png"
        alt={"Logo de la empresa"}
        width={100}
        height={100}
        class="w-48"
      /></a
    >
    <button onclick="closeNavbar()" aria-label="Button Close X"><X /></button>
  </div>
  <ul class="flex flex-col p-4 gap-6 font-semibold text-2xl">
    <li>
      <a
        class="hover:text-primary transition-colors"
        onclick="closeNavbar()"
        href="#services">Servicios</a
      >
    </li>
    <li>
      <a
        class="hover:text-primary transition-colors"
        onclick="closeNavbar()"
        href="#portfolio">Casos de Ã‰xito</a
      >
    </li>
    <li>
      <a
        class="hover:text-primary transition-colors"
        onclick="closeNavbar()"
        href="#contact">Contacto</a
      >
    </li>
  </ul>
</div>

<style>
  @keyframes closeNavBar {
    0% {
      top: 0;
    }
    100% {
      top: -100vh;
    }
  }
</style>

<script is:inline>
  function closeNavbar() {
    const navbar = document.getElementById("navbar-mobile");
    navbar.style.animation = "closeNavBar 0.5s";
  }
</script>
