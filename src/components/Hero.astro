---
import Container from "@/components/Container.astro";
---

<section class="bg-gradient-to-b from-secondary to-background">
  <Container>
    <div>
      <div
        class="flex flex-col md:flex-row w-full justify-between md:items-center gap-4"
      >
        <div class="md:flex-1">
          <h1 class="text-2xl md:text-5xl text-pretty">
            Instalación de placas <span class="text-tertiary"
              >Fotovoltaicas</span
            > en Barcelona
          </h1>
          <p class="text-lg font-semibold text-gray-700 mt-1.5">
            Experto en Energía Renovable
          </p>
          <p class="text-text font-semibold">Ray Bazan</p>
        </div>
        <div class="flex md:grid md:grid-cols-2 gap-2 md:gap-4">
          <div class="flex -space-x-2 overflow-hidden">
            <img
              width={24}
              height={24}
              class="inline-block size-10 rounded-full ring-2 ring-secondary"
              src="/images/avatar-1.webp"
              alt="Avatar 1"
            />
            <img
              width={24}
              height={24}
              class="inline-block size-10 rounded-full ring-2 ring-secondary"
              src="/images/avatar-2.webp"
              alt="Avatar 2"
            />
            <img
              width={24}
              height={24}
              class="inline-block size-10 rounded-full ring-2 ring-secondary"
              src="/images/avatar-3.webp"
              alt="Avatar 3"
            />
            <img
              width={24}
              height={24}
              class="inline-block size-10 rounded-full ring-2 ring-secondary"
              src="/images/avatar-4.webp"
              alt="Avatar 4"
            />
          </div>
          <div class="flex flex-col">
            <span class="text-tertiary text-xl font-bold">+150</span>
            <span class="text-color text-md font-semibold"
              >Clientes felices</span
            >
          </div>
        </div>
      </div>
      <div
        class="w-full h-72 md:h-[500px] flex rounded-lg shadow-lg mt-5 relative"
      >
        <img
          width={500}
          height={500}
          class="w-full h-full object-cover rounded-lg z-0"
          src="/images/hero.webp"
          alt="Instalación de placas solares Hero imagen"
        />

        <div
          class="absolute inset-0 w-full h-full flex justify-around items-end rounded-sm p-4 md:p-16 gap-4 font-semibold bg-gradient-to-b from-transparent to-text/90"
        >
          <div
            class="w-full flex flex-col-reverse justify-center items-center gap-2 md:grid md:grid-cols-2"
          >
            <a
              name="Whatsapp"
              href="https://wa.me/34692488608"
              target="_blank"
              rel="noopener noreferrer"
              class="w-fit h-fit md:self-end hover:bg-text bg-green-800 text-sm text-center py-2 px-4 rounded-sm text-background transition-colors"
            >
              Presupuesto gratuito!
            </a>
            <p class="text-pretty text-background text-lg md:text-end">
              Ahorra un <span class="text-secondary">70%</span> en tu factura.
            </p>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
